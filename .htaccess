<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect non-www to www (for seelen-fluesterin.ch)
    RewriteCond %{HTTP_HOST} ^seelen-fluesterin\.ch$ [NC]
    RewriteRule ^(.*)$ https://www.seelen-fluesterin.ch/$1 [L,R=301]

    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect all requests to the public folder (except if already inside it)
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L]

    # Handle index.php properly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /public/index.php [L]
</IfModule>